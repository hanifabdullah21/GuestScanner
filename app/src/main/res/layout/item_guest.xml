<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ig_iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ig_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/lato"
            app:layout_constraintLeft_toRightOf="@id/ig_iv_avatar"
            app:layout_constraintRight_toLeftOf="@id/ig_iv_attend"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nama Tamu" />

        <TextView
            android:id="@+id/ig_tv_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:fontFamily="@font/lato"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ig_iv_avatar"
            app:layout_constraintRight_toLeftOf="@id/ig_iv_attend"
            app:layout_constraintTop_toBottomOf="@id/ig_tv_name"
            app:layout_constraintVertical_bias="0"
            tools:text="Nama Tamu" />

        <ImageView
            android:id="@+id/ig_iv_attend"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/selector_attend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>